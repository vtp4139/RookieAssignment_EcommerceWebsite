@using Microsoft.AspNetCore.Http
@using EcommerceWebsite.CustomerSite.Services;
@using EcommerceWebsite.Shared;
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcommerceWebsite.CustomerSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Fontawesome -->
    <link rel="stylesheet" href="../fontawesome-free-5.15.2-web/css/all.css">
    @RenderSection("JavaScript", required: false)
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><span id="textlogo"><b>VTP</b>gear</span></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Order" asp-action="Index">Danh sách đơn hàng</a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Cart Icon -->
                <form class="d-flex">
                    <partial name="_LoginPartial" />
                    @if (HttpContextAccessor.HttpContext.Session.Get<List<CartItemsVm>>("SessionCart") != null)
                    {
                        var count = HttpContextAccessor.HttpContext.Session.Get<List<CartItemsVm>>("SessionCart").Count;
                        <button class="btn btn-success" type="submit" asp-controller="Cart" asp-action="Index"><i class="fas fa-shopping-cart"></i>&nbsp;Cart<span id="quantities" class="badge badge-pill badge-warning">@count</span></button>
                    }
                    else
                    {
                        <button class="btn btn-success" type="submit" asp-controller="Cart" asp-action="Index"><i class="fas fa-shopping-cart"></i>&nbsp;Cart<span id="quantities" class="badge badge-pill badge-warning">0</span></button>
                    }
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - EcommerceWebsite.CustomerSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
