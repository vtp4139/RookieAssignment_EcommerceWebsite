@{
    ViewData["Title"] = "Home Page";
}

<table class="table">
    <tr>
        <th style="text-align:center">Sản phẩm</th>
        <th>Tên sản phẩm</th>
        <th style="text-align:center">Số lượng</th>
        <th style="text-align:center">Giá tiền</th>
        <th>Xóa</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td><img src="@item.ImageLocation[0]" alt="Card image cap" width=180 height=100></td>
            <td>@item.ProductName</td>
            <td style="text-align:center">@item.Quantity</td>
            <td style="color:red; text-align:center">$@item.Price</td>
            <td>
                <span class="badge badge-danger" style="width:50px">Xóa</span>
            </td>
        </tr>
    }
<tr>
    <th colspan="2"></th>
    <th style="text-align:center">Thành tiền:</th>
    @{
        decimal totalPerPro = 0;
        decimal total = 0;
        foreach (var item in Model)
        {
            totalPerPro = item.Quantity * item.Price;
            total += totalPerPro;
        }
        <th style="color:red; text-align:center; font-size:20px"> $@total</th>
    }
    <th> <button type="submit" class="btn btn-danger" style="width:150px;">Thanh toán</button></th>
</tr>
</table>



